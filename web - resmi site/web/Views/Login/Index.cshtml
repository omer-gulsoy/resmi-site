@model LoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Index</h1>



<div class="contact-form">
	<form method="post">
		<div class="row d-flex justify-content-center">
			<div class="col-md-6 text-center">
				<h5 class="mb-2">T.C. Kimlik Numaranız</h5>
				<input type="text" id="userNameInput" asp-for="UserName" oninput="tc(this)">
			</div>
		</div>


		<div class="row justify-content-center">
			<div class="col-md-6">
				<h5 class="mb-2 text-center">Parolanız</h5>
				<input type="password" asp-for="Password">
			</div>
		</div>

		<div class="row">

			<div class="col-md-12 text-center">

				<button type="submit">GİRİŞ YAP</button>
			</div>
			<div>
				<p class="text-center">Hesabınız yok mu? <a href="~/Register/Index">Hesap oluşturun.</a></p>
			</div>
		</div>
	</form>
</div>
