@model entity.Concrate.Product
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="service-details pages pt-90 pb-50">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-md-5 col-sm-12 col-xs-12">
				<div class="service-details-pn-list">
					<ul>
						@foreach (var modul in ViewBag.Moduller)
						{
							if (modul.Product_Id == Model.Product_Id)
							{
								<div class="service-details-big-button mt-40 mb-40">
									<a href="~/ProductAndService/ModulDetails/@modul.Product_Id">
										<span class="details-big-content">
											@modul.Title
											<i class="fa fa-long-arrow-right"></i>
										</span>
									</a>
								</div>
							}
						}
						@foreach (var item in ViewBag.Urunler)
						{
							<li>
								<a href="~/ProductAndService/ProductDetails/@item.Product_Id">
									@item.Title
									<span><i class="fa fa-angle-right"></i></span>
								</a>
							</li>
						}
					</ul>
				</div>
			</div>
			<div class="col-lg-8 col-md-7 col-sm-12 col-xs-12">
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12">
						<div class="service-main-details">
							<div class="service-main-details-inner">
								<div class="service-main-details-inner-thumb">
									<img src="@Model.PhotoURL" alt="" />
								</div>
								<div class="service-main-details-content-title pt-4 pb-3">
									<h3>@Model.Title</h3>
								</div>
								<div class="service-main-details-content-text pb-4">
									<p>
										@Model.Text
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>