@model List<entity.Concrate.Product>
@{
	ViewData["Title"] = "Ürünlerimiz";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="service_area bg_color2 pt-80 pb-70">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section_title text_center mb-5">
					<div class="section_sub_title uppercase mb-3">
						<h6>HİZMET VE ÜRÜNLERİMİZ</h6>
					</div>
					<div class="section_main_title">
						<h1>Ürünlerimiz</h1>
					</div>
					<div class="em_bar">
						<div class="em_bar_bg"></div>
					</div>
					<div class="section_content_text pt-4">
						<p>
							Yenilikçi ve güvenilir yazılım ürünlerimizle iş süreçlerinizi optimize edin. Modern teknolojilerle geliştirdiğimiz çözümler, ihtiyacınıza özel esneklik ve performans sunar.
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6 col-sm-12">
					<div class="service_style_three pt-60 pl-30 pr-30 mb-5 text_center">
						<div class="service_style_three_icon mb-35">
							<i class="fa fa-apple"></i>
						</div>
						<div class="service_style_three_title pb-3">
							<h4>@item.Title</h4>
						</div>
						<div class="service_style_three_text">
							<p>
								@item.ShortText
							</p>
						</div>
						<div class="service_style_three_bt_icon pt-30">
							<a href="~/ProductAndService/ProductDetails/@item.Product_Id"><i class="fa fa-long-arrow-right"></i></a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>