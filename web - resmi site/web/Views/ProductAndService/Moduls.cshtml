@model List<entity.Concrate.Modul>
@{
	ViewData["Title"] = "Modüllerimiz";
	Layout = "~/Views/Shared/_Layout.cshtml";
}	
<div class="service_area bg_color2 pt-85 pb-180">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section_title text_center mb-55">
					<div class="section_sub_title uppercase mb-3">
						<h6>HİZMET VE ÜRÜNLERİMİZ</h6>
					</div>
					<div class="section_main_title">
						<h1>Modüllerimiz</h1>
					</div>
					<div class="em_bar">
						<div class="em_bar_bg"></div>
					</div>
					<div class="section_content_text pt-4">
						<p>
							TRtek Yazılım olarak Projelerinizi kolayca yönetebilmeniz için esnek ve ölçeklenebilir modüller sunuyoruz. İhtiyacınıza özel geliştirilen çözümlerle iş süreçlerinizi verimli hale getiriyoruz.
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6 col-sm-12">
					<div class="service_style_five pt-40 pb-40 pl-25 pr-3 mb-30">
						<div class="service_style_five_icon mb-30">
							<div class="icon">
								<i class="flaticon-business-and-finance"></i>
							</div>
						</div>
						<div class="service_style_five_title mb-2">
							<h4>@item.Title</h4>
						</div>
						<div class="service_style_five_text">
							<p>
								@item.ShortText
							</p>
						</div>
						<div class="service_style_five_button">
							<a href="~/ProductAndService/ModulDetails/@item.Modul_Id">Read More <i class="fa fa-long-arrow-right"></i></a>
						</div>
					</div>
				</div>
			}		

		</div>
	</div>
</div>