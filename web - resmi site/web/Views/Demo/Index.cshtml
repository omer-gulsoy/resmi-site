@model entity.Concrate.DemoBasvuru
@{
    ViewData["Title"] = "Demo Başvurusu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.single_contact_now {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 90%;
	}
		
	.single_contact_now_inner {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

</style>

<div class="appointment_form pb-100">
	<div class="container">
		<div class="row nagative_margin">
			<div class="col-xl-12">
				<div class="appointment_form_inner">
					<div class="appointment_title pb-35">
						<h1>İletişim Formu</h1>
					</div>
					<form id="contact_form"
						  method="POST"
						  id="dreamit-form">
						<div class="row">
							<div class="col-lg-6">
								<h6>İsminiz</h6>
								<div class="form_box mb-30">
									<input type="text" asp-for="Isim" placeholder="İsminiz" class="input-black" />
								</div>
							</div>
							<div class="col-lg-6">
								<h6>Soyisminiz</h6>
								<div class="form_box mb-30">
									<input type="text" asp-for="Soyisim" placeholder="Soyisminiz" class="input-black" />
								</div>
							</div>
							<div class="col-lg-6">
								<h6>Cep Telefon Numaranız</h6>
								<div class="form_box mb-30">
									<input type="text"
										   asp-for="TelefonCep"
										   placeholder="Cep Telefon Numaranız" />
								</div>
							</div>
							<div class="col-lg-6">
								<h6>Sabit Telefon Numaranız</h6>
								<div class="form_box mb-30">
									<input type="text"
										   asp-for="TelefonSabit"
										   placeholder="Sabit Telefon Numaranız" />
								</div>
							</div>
							<div class="col-lg-6">
								<h6>Kurum İsmi</h6>
								<div class="form_box mb-30">
									<input type="text"
										   asp-for="KurumIsmi"
										   placeholder="Kurum İsmi" />
								</div>
							</div>
							<div class="col-lg-6">
								<h6>Unvanınız</h6>
								<div class="form_box mb-30">
									<input type="text"
										   asp-for="Unvan"
										   placeholder="Unvanınız" />
								</div>
							</div>

							<div class="col-lg-6">
								<h6>E-Posta Adresiniz</h6>
								<div class="form_box mb-30">
									<input type="email"
										   asp-for="Mail"
										   placeholder="E-Posta Adresiniz" />
								</div>
							</div>

							<div class="col-lg-12">
								<h6>Açıklamanız</h6>
								<div class="form_box mb-30">
									<textarea Asp-For="Aciklama"
											  id="message"
											  cols="30"
											  rows="10"
											  placeholder="Mesajınız"></textarea>
								</div>
								<div class="quote_btn text_center">
									<button class="btn" type="submit"><b>Formu Gönder</b></button>
								</div>
							</div>
						</div>
					</form>
					<div class="status"></div>
				</div>
			</div>
		</div>
	</div>
</div>
